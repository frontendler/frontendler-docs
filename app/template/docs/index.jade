extends /_layouts/_docs
block link
	-var selected = 'Start';
block sidebar
	include /_includes/_docs_sidebar_start
block content
	div.typo
		+title("Dependencies")
		div.container
			+command("Node","text","node").
				Download and install instructions in this page <a href="http://nodejs.org/" target="_blank">http://nodejs.org/</a>
			+command("Gulp","bash","gulp").
				$npm install gulp -g
		+title("Install")
		div.container
			+command("Clone the project","bash","clone").
				$git clone git@github.com:frontendler/frontendler.git
			+command("Install project dependencies","bash","install").
				$npm install
		+title("Run Frontendler")
		div.container
			+command("Watch","bash","watch").
				$gulp watch
			+command("Build","bash","build").
				$gulp build	
		+title("Tools")
		div.container
			+command("Atom snippets","text","atom-snippets")
				|<a href="https://atom.io/packages/frontendler-atom-snippets" target="_blank">https://atom.io/packages/frontendler-atom-snippets</a>
			+command("Chrome inspector","text","chrome-inspector")
