extends /_layouts/_docs
block link
	-var selected = 'Start';
block sidebar
	include /_includes/_docs_sidebar_start
block content
	div.typo
		+title("Dependencies")
		div.install
			div.container
				+command("Ruby","bash","sass").
					Download and install instructions in <a href="https://www.ruby-lang.org/">https://www.ruby-lang.org/</a>
				+command("Sass (v3.3.14)","bash","sass").
					$ sudo gem install sass -v 3.3.14
				+command("Node","bash","node").
					Download and install instructions in this page <a href="http://nodejs.org/">http://nodejs.org/</a>
				+command("Gulp","bash","gulp").
					$npm install gulp -g
		+title("Install")
		div.install
			div.container
				+command("Clone the project","bash","clone").
					$ git clone git@github.com:frontendler/frontendler.git
				+command("Install project dependencies","bash","npm").
					$ npm install
		+title("Run Frontendler")
		div.install
			div.container
				+command("Watch","bash","watch").
					$ gulp watch
				+command("Build","bash","build").
					$ gulp build
