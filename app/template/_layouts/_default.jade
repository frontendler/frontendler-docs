doctype html
html(lang="en")
	head
		// SETTINGS - DOCUMENT 
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name="viewport",content="width=device-width,initial-scale=1.0,user-scalable=no")
		title Frontendler
		meta(name='description',content='The responsive development kit. Simple and efficient.')
		// OPEN GRAPH
		meta(property="og:title", content="Frontendler")
		meta(property="og:type", content="website")
		meta(property="og:url", content="http://frontendler.com.br")
		meta(property="og:image", content="/assets/images/branding/og-image.png")
		// SETTINGS - IOS
		meta(name="apple-mobile-web-app-capable",content="yes")
		meta(name="apple-mobile-web-app-status-bar-style",content="black")
		meta(name="apple-mobile-web-app-title",content="Frontendler")
		link(rel='apple-touch-icon',href='/assets/images/branding/icon-57x57.png')
		link(rel='apple-touch-icon',sizes='76x76',href='/assets/images/branding/icon-76x76.png')
		link(rel='apple-touch-icon',sizes='120x120',href='/assets/images/branding/icon-120x120.png')
		link(rel='apple-touch-icon',sizes='152x152',href= '/assets/images/branding/icon-152x152.png')
		link(rel="apple-touch-startup-image",href="/assets/images/branding/startup.png")
		// SETTINGS - ANDROID 
		meta(name='mobile-web-app-capable', content='yes')
		meta(name='application-name', content='Frontendler')
		link(rel='icon', sizes='192x192', href='/assets/images/branding/icon-192x192.png')
		// SETTINGS - WINDOWS
		meta(name='msapplication-TileImage', content='/assets/images/branding/ms-tile.png')
		meta(name='msapplication-TileColor', content='#1d2732')
		// SETTINGS - DEFAULT
		link(rel='icon', href='/assets/images/branding/favicon.png')
		// STYLES - FONT
		link(href='http://fonts.googleapis.com/css?family=Grand+Hotel|Open+Sans:400italic,400,600,700,300',rel='stylesheet',type='text/css')
		// STYLES - HEAD
		// build:css /assets/styles/main.css
		block style
		// endbuild
		// SCRIPTS - HEAD 
		// build:js /assets/scripts/modernizr.js
		script(src='assets/scripts/libs/modernizr.js')
		// endbuild
		body
			block body
			footer
				div.container
					p
						span.logo
							a(href="/").url Frontendler
						a(href="https://github.com/frontendler/frontendler").link source code
						a(href="https://github.com/frontendler/frontendler/issues").link issues
			// SCRIPTS - BODY
			// build:js /assets/scripts/main.js
			script(src='/assets/scripts/libs/jquery.js')
			block script
			script(src='/assets/scripts/main.js')
			// endbuild
			// STATISTICS - GOOGLE ANALITCS 
			// Google Analytics: change UA-XXXXX-X to be your site's ID.
			script.
				(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
				(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
				m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
				})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

				ga('create', 'UA-12457267-6', 'frontendler.com.br');
				ga('send', 'pageview');
