mixin command(name,type,hash)
	div.command-block
		h3.command-name
			a(name="#{hash}").name=name			
		pre.box-code
			code(class="language-#{type}")
				if block
					block

mixin command-block()
	div.command-block
		block
			
mixin command-name(name,hash)
	h3.command-name
		a(name="#{hash}").name=name

mixin command-code (type)
	pre.box-code
		code(class="language-#{type}")
			if block
				block

mixin command-description()
	p.description
		block
